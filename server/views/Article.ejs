<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
</head>
<body>
<%= JSON.stringify(data)%>
<table border="1" width="100%">
  <thead>
  <tr>
    <th>ID</th>
    <th>标题</th>
    <th>内容</th>
    <th>时间</th>
    <th>作者</th>
    <th>操作</th>
  </tr>
  </thead>
  <tbody>
  <% for(var i = 0;i<data.length;i++){%>
  <tr>
    <td><%= data[i].id%></td>
    <td><%= data[i].title%></td>
    <td><%= data[i].content%></td>
    <td><%= data[i].time%></td>
    <td><%= data[i].author%></td>
    <td>
      <a href="/admin/user?act=mod&id=<%= data[i].id%>">修改</a>
      <a href="?act=remove&id=<%= data[i].id%>"
         onclick="return confirm('确定删除吗')">删除</a>
    </td>
  </tr>
  <%}%>
  </tbody>
</table>

  <form action="/api/admin/addArticle.json" method="post">
    title:<input type="text" value="" name="title"><br>
    content:<textarea cols="50" rows="30" name="content"></textarea><br>
    author:<input type="text" value="" name="author"><br>
    <input type="submit" value="提交">
  </form>
</body>
</html>